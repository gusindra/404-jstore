---
import Layout from '../layouts/Layout.astro';
import ContextAlert from '../components/ContextAlert.astro';
import Markdown from '../components/Markdown.astro';

const explainer = `
This website can go way beyond static pages - on the right platform.
`;
---

<Layout title="Opps 404 Error">
    <ContextAlert class="mb-4" />
    <h1 class="mb-10">404 Not Found</h1>
    <Markdown content={explainer} class="text-lg mb-10" />
    <p class="mb-8">
        <a href="javascript:history.back()" class="btn btn-lg btn-primary sm:btn-wide">Go back</a>
    </p>
</Layout>
